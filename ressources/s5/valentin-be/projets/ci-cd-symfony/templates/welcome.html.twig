{% extends 'base.html.twig' %}

{% block title %}Bienvenue{% endblock %}

{% block body %}
    <div class="welcome-container">
        <h1>{{ message }}</h1>
        <p>Nous sommes ravis de vous accueillir sur notre plateforme.</p>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .welcome-container {
            text-align: center;
            padding: 50px;
            background: linear-gradient(135deg, #4facfe, #00f2fe);
            color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            max-width: 600px;
            margin: 50px auto;
        }

        .welcome-container h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .welcome-container p {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .btn {
            background: white;
            color: #4facfe;
            padding: 10px 20px;
            text-decoration: none;
            font-weight: bold;
            border-radius: 5px;
            transition: 0.3s;
        }

        .btn:hover {
            background: #d4f3ff;
        }
    </style>
{% endblock %}

